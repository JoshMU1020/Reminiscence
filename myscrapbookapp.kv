<WelcomeScreen>:
    canvas.before:
        Color:
            rgba: 133/255, 168/255, 186/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 2, self.height - 2
            width: 5
    BoxLayout:
        orientation: 'vertical'
        padding: 80
        spacing: 10
        Label:
            text: 'Welcome to Reminiscence!'
            size_hint_y: None
            height: '48dp'
            font_size: '24sp'
            color: 1, 1, 1, 1
            bold: True
            italic: True
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None
        Button:
            text: 'Create Account'
            font_size: '20sp'
            bold: True
            size_hint_y: None
            height: '58dp'
            size_hint_x: None
            width: 300
            foreground_color: 1, 1, 1, 1
            background_color: 133/255, 168/255, 186/255, 1
            pos_hint: {'center_x': 0.5}
            on_press: app.open_create_account_popup()
        TextInput:
            id: username_input
            font_size: '20sp'
            bold: True
            size_hint_y: None
            height: '58dp'
            size_hint_x: None
            width: 300
            foreground_color: 1, 1, 1, 1
            background_color: 133/255, 168/255, 186/255, 1
            pos_hint: {'center_x': 0.5}
            hint_text_color: 0.9, 0.9, 0.9, 1
            hint_text: 'Enter username'
        TextInput:
            id: password_input
            password: True
            font_size: '20sp'
            bold: True
            size_hint_y: None
            height: '58dp'
            size_hint_x: None
            width: 300
            foreground_color: 1, 1, 1, 1
            background_color: 133/255, 168/255, 186/255, 1
            pos_hint: {'center_x': 0.5}
            hint_text_color: 0.9, 0.9, 0.9, 1
            hint_text: 'Enter password'
        Button:
            text: 'Login'
            font_size: '20sp'
            bold: True
            size_hint_y: None
            height: '58dp'
            size_hint_x: None
            width: 300
            foreground_color: 1, 1, 1, 1
            background_color: 133/255, 168/255, 186/255, 1
            pos_hint: {'center_x': 0.5}
            on_press: root.login_and_clear()

<CreateAccountPopup@Popup>:
    title: 'Create Account'
    size_hint: None, None
    size: 400, 400
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: new_username
            font_size: '20sp'
            bold: True
            foreground_color: 1, 1, 1, 1
            background_color: 133/255, 168/255, 186/255, 1
            hint_text_color: 0.9, 0.9, 0.9, 1
            hint_text: 'Enter username'
        TextInput:
            id: new_password
            font_size: '20sp'
            bold: True
            foreground_color: 1, 1, 1, 1
            background_color: 133/255, 168/255, 186/255, 1
            hint_text_color: 0.9, 0.9, 0.9, 1
            password: True
            hint_text: 'Enter password'
        Button:
            text: 'Create'
            background_color: 133/255, 168/255, 186/255, 1
            on_release: app.create_account(new_username.text, new_password.text)

<MainMenu>:
    canvas.before:
        Color:
            rgba: 133/255, 168/255, 186/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 2, self.height - 2
            width: 5
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        height: self.minimum_height
        width: 300
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: 40
        spacing: 10
        Label:
            text: 'Main Menu'
            size_hint_y: None
            height: '48dp'
            font_size: '24sp'
            color: 1, 1, 1, 1
            bold: True
            italic: True
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None
        Button:
            text: 'View Pages'
            font_size: '20sp'
            bold: True
            height: '58dp'
            size_hint_y: None
            width: 300
            background_color: 133/255, 168/255, 186/255, 1
            on_press: root.manager.current = 'viewPages'
        Button:
            text: 'Create New Page'
            font_size: '20sp'
            bold: True
            height: '58dp'
            size_hint_y: None
            width: 300
            background_color: 133/255, 168/255, 186/255, 1
            on_press: root.manager.current = 'pageCreation'
        Button:
            text: 'Logout'
            font_size: '20sp'
            bold: True
            height: '58dp'
            size_hint_y: None
            width: 300
            background_color: 133/255, 168/255, 186/255, 1
            on_press: root.manager.current = 'welcome'

<ViewPages>:
    canvas.before:
        Color:
            rgba: 133/255, 168/255, 186/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 2, self.height - 2
            width: 5
    on_enter: root.load_images()
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 10
        Label:
            id: title_label
            text: 'View Scrapbook'
            size_hint_y: None
            height: '48dp'
            font_size: '24sp'  # Adjust the font size as needed
            color: 1, 1, 1, 1  # Text color in RGBA (here it's black)
            bold: True  # Make the text bold
            italic: True  # Set to True for italic text
            halign: 'center'  # Horizontally align the text to center
            valign: 'middle'  # Vertically align the text to middle
            text_size: self.width, None  # Needed for aligning text
            canvas.before:
                Color:
                    rgba: 133/255, 168/255, 186/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        ScrollView:
            size_hint_y: None
            height: '400dp'
            BoxLayout:
                id: pages_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        Button:
            id: bottom_button
            text: 'Main Menu'
            font_size: '20sp'
            bold: True
            size_hint_y: None
            height: '58dp'
            size_hint_x: None
            width: 300
            pos_hint: {'center_x': 0.5}
            background_color: 133/255, 168/255, 186/255, 1
            on_press: root.manager.current = 'mainMenu'

